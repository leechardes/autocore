# AutoCore Environment Configuration
# Copie este arquivo para .env e configure as variáveis

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=autocore
MQTT_PASSWORD=SUA_SENHA_SEGURA_AQUI

# Database
DATABASE_PATH=./database/autocore.db

# Security Keys (serão geradas automaticamente no deploy)
SECRET_KEY=SERA_GERADA_NO_DEPLOY
JWT_SECRET_KEY=SERA_GERADA_NO_DEPLOY

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Gateway Configuration
GATEWAY_PORT=5000

# Config App
CONFIG_APP_PORT=3000

# Development
DEBUG=false
LOG_LEVEL=INFO
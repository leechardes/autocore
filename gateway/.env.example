# AutoCore Gateway Configuration

# MQTT Broker Settings
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=autocore-gateway
MQTT_KEEPALIVE=60

# Database Settings
DATABASE_PATH=../database/autocore.db

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=/tmp/autocore-gateway.log

# Performance Settings
MAX_CONCURRENT_MESSAGES=100
MESSAGE_TIMEOUT=30
DEVICE_TIMEOUT=300

# Telemetry Settings
TELEMETRY_BATCH_SIZE=10
TELEMETRY_FLUSH_INTERVAL=5

# Security Settings
ENABLE_AUTH=true
SECRET_KEY=autocore-secret-key-change-in-production
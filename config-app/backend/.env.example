# Config-App Backend Environment Variables

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_LOG_LEVEL=info

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Database Path (relativo ao projeto database)
DATABASE_PATH=../../database

# JWT Secret (gerar uma nova em produção)

menu "ESP32 Display Configuration"

    config ESP32_DISPLAY_PROJECT_NAME
        string "Project Name"
        default "ESP32-Display"
        help
            Project name for display device

    config ESP32_DISPLAY_DEFAULT_AP_PASSWORD
        string "Default AP Password"
        default "autocore123"
        help
            Default password for AP mode

    config ESP32_DISPLAY_MDNS_ENABLED
        bool "Enable mDNS"
        default y
        help
            Enable mDNS for device discovery

    config ESP32_DISPLAY_OTA_ENABLED
        bool "Enable OTA Updates"
        default y
        help
            Enable Over-The-Air updates

    menu "Display Hardware Configuration"

        choice ESP32_DISPLAY_TYPE
            prompt "Display Type"
            default ESP32_DISPLAY_ILI9341
            help
                Select the display controller type

            config ESP32_DISPLAY_ILI9341
                bool "ILI9341 (320x240)"
            
            config ESP32_DISPLAY_ST7789
                bool "ST7789 (240x240 or 240x320)"
            
            config ESP32_DISPLAY_SSD1306
                bool "SSD1306 OLED (128x64)"
            
            config ESP32_DISPLAY_ILI9488
                bool "ILI9488 (480x320)"
        endchoice

        config ESP32_DISPLAY_WIDTH
            int "Display Width"
            default 240 if ESP32_DISPLAY_ILI9341
            default 240 if ESP32_DISPLAY_ST7789
            default 128 if ESP32_DISPLAY_SSD1306
            default 480 if ESP32_DISPLAY_ILI9488
            help
                Display width in pixels (native resolution)

        config ESP32_DISPLAY_HEIGHT
            int "Display Height"
            default 320 if ESP32_DISPLAY_ILI9341
            default 240 if ESP32_DISPLAY_ST7789
            default 64 if ESP32_DISPLAY_SSD1306
            default 320 if ESP32_DISPLAY_ILI9488
            help
                Display height in pixels (native resolution)

        config ESP32_DISPLAY_MISO_GPIO
            int "MISO GPIO number"
            default 12
            help
                GPIO number for SPI MISO signal

        config ESP32_DISPLAY_MOSI_GPIO
            int "MOSI GPIO number"
            default 13
            help
                GPIO number for SPI MOSI signal

        config ESP32_DISPLAY_SCLK_GPIO
            int "SCLK GPIO number"
            default 14
            help
                GPIO number for SPI SCLK signal

        config ESP32_DISPLAY_CS_GPIO
            int "CS GPIO number"
            default 15
            help
                GPIO number for SPI CS signal

        config ESP32_DISPLAY_DC_GPIO
            int "DC GPIO number"
            default 2
            help
                GPIO number for Data/Command signal

        config ESP32_DISPLAY_RST_GPIO
            int "RESET GPIO number"
            default 12
            help
                GPIO number for RESET signal (can share with MISO)

        config ESP32_DISPLAY_BL_GPIO
            int "Backlight GPIO number"
            default 21
            help
                GPIO number for backlight control
        
        config ESP32_DISPLAY_SPI_FREQ
            int "SPI Frequency (Hz)"
            default 65000000
            range 10000000 80000000
            help
                SPI clock frequency for display (65MHz recommended for ILI9341)

        config ESP32_DISPLAY_TOUCH_ENABLED
            bool "Enable Touch Controller"
            default y
            help
                Enable touch controller support (XPT2046)

        if ESP32_DISPLAY_TOUCH_ENABLED
            config ESP32_DISPLAY_TOUCH_CS_GPIO
                int "Touch CS GPIO number"
                default 33
                help
                    GPIO number for touch controller CS
            
            config ESP32_DISPLAY_TOUCH_IRQ_GPIO
                int "Touch IRQ GPIO number"
                default 36
                help
                    GPIO number for touch interrupt
            
            config ESP32_DISPLAY_TOUCH_MOSI_GPIO
                int "Touch MOSI GPIO number"
                default 32
                help
                    GPIO number for touch SPI MOSI (VSPI)
            
            config ESP32_DISPLAY_TOUCH_MISO_GPIO
                int "Touch MISO GPIO number"
                default 39
                help
                    GPIO number for touch SPI MISO (VSPI)
            
            config ESP32_DISPLAY_TOUCH_CLK_GPIO
                int "Touch CLK GPIO number"
                default 25
                help
                    GPIO number for touch SPI clock (VSPI)
            
            config ESP32_DISPLAY_TOUCH_SPI_FREQ
                int "Touch SPI Frequency (Hz)"
                default 2500000
                range 1000000 5000000
                help
                    SPI clock frequency for touch controller
        endif

    endmenu

    menu "Display Features"

        config ESP32_DISPLAY_ROTATION
            int "Display Rotation"
            range 0 3
            default 1
            help
                Display rotation (0=0째, 1=90째, 2=180째, 3=270째)

        config ESP32_DISPLAY_BUFFER_SIZE
            int "Display Buffer Size (lines)"
            range 10 240
            default 40
            help
                Number of display lines for partial buffer

        config ESP32_DISPLAY_FPS_COUNTER
            bool "Show FPS Counter"
            default n
            help
                Show frames per second counter

        config ESP32_DISPLAY_AUTO_BRIGHTNESS
            bool "Auto Brightness"
            default y
            help
                Enable automatic brightness adjustment

    endmenu

endmenu